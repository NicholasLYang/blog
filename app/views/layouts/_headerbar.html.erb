<% user = User.find_by(id: session[:user_id]) %>
Welcome<%= ' ' + user[:name].capitalize if user %>! <br>
<span>
    <%= link_to 'Home', root_path, class: "userinfo-link", method: :get %>
    <% if user %>
        <%= link_to 'Logout', logout_path, class: "userinfo-link", method: :delete %>
        <% if user.is_admin? %>
            <%= link_to 'New Post', new_admin_article_path, class: "userinfo-link", method: :get %>
            <%= link_to 'List Posts', admin_articles_path, class: "userinfo-link", method: :get %>
        <% end %>
    <% else %>
        <%= link_to 'Login', login_path, class: "userinfo-link", method: :get %>
    <% end %>
</span>
