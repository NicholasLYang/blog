Welcome<%= ' ' + current_user[:name].capitalize if current_user %>! <br>
<% if current_user %>
    <%= link_to 'Logout', destroy_user_session_path, class: 'userinfo-link', method: :delete %>
    <% if current_user.is_admin? %>
        <%= link_to 'New Post', new_admin_article_path, class: 'userinfo-link', method: :get %>
        <%= link_to 'List Posts', admin_articles_path, class: 'userinfo-link', method: :get %>
    <% end %>
<% else %>
    <%= link_to 'Login', new_user_session_path, class: 'userinfo-link', method: :get %>
<% end %>
