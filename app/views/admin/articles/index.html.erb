<div class="adminarticle-list">
  <% @articles.each do |article| %>
  <div class="admin-article">
    <tr>
      <td><strong><%=  article.title %></td></strong>
      <td><%=  raw(article.body.truncate(300, omission: '....'))  %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
      <td><%= link_to 'Destroy', admin_article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </div>
  <% end %>
</div>
